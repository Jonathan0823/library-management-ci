<?xml version="1.0"?>
<ruleset name="CodeIgniter4Custom">
    <description>Custom PHPCS rules for CodeIgniter 4 project.</description>

    <rule ref="PSR12">
        <exclude name="PEAR.Commenting.FileComment.Missing"/>
        <exclude name="PEAR.Commenting.ClassComment.Missing"/>
        <exclude name="PSR1.Files.SideEffects.FreePass"/>
        <exclude name="Generic.Files.LineLength.TooLong"/>
    </rule>

    <file>./app</file>
    </ruleset>
